<div class="container-fluid">
  <div class="row" id="header">
    <h1>Songs</h1>
  </div>
</div>

<div class="container-fluid">
  <div class="row">
   <% @songs.each do |song| %>
      <div>
        <h3><%= song.title %></h3> 
        <form method="post" action="/songs/upvote">
          <input type="hidden" name="song_id" value="<%= song.id %>">
          <button type="submit" class="btn btn-default">Vote</button>
        </form>
        <p>by: <%= song.author %></p>
        <p>url: <%= song.url %></p>
        <p>Song added by: <%= song.user.username %></p>
      </div>
    <% end %>
  </div>

<br/>

<div class="button">
  <a href="/songs/new" class="btn btn-default" role="button">Add a new song!</a>
</div>

<br/>

<div class="button">
  <a href="/logout" class="btn btn-default" role="button">Logout</a>
</div>